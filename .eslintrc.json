{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            { "ignoredNodes": ["JSXElement *"] }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "react/jsx-indent": "off",
        "react/jsx-filename-extension": [
            1, 
            { 
                "extensions": [".js", ".jsx"] 
            }
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["server", "./server"],
                    ["pages", "./client/src/pages"],
                    ["routes", "./client/src/routes"]
                ],
                "extensions": [".js", ".jsx", ".json"]
            }
        }
    }
}